;~ Siskin project nest file ~;
github: @asmjit
github: @blend2d
;github: blend2d/blend2d-samples

compiler: gcc
needs:    cmake

#if Windows? [ define: _CRT_SECURE_NO_WARNINGS upx: on needs: msbuild]
#if macOS?   [ define: TO_OSX     define: HAS_BOOL]
#if Linux?   [ define: TO_LINUX ]

target-x86: [
	arch: x86
	#if Windows? [ defines: [ TO_WIN32 _WIN32 ] ]
	#if Linux?   [ defines: [ TO_LINUX_X86    ] ]
]
target-x64: [
	arch: x64
	defines: [
		_FILE_OFFSET_BITS=64
		__LP64__ ; has long (integer) 64 bits
	]
	#if Windows? [ defines: [ TO_WIN32_X64 _WIN32 ] ]
	#if Linux?   [ defines: [ TO_LINUX_X64        ] ]
	#if macOS?   [ defines: [ TO_OSX_X64          ] flags: ["-arch x86_64"] ]
]

target-arm64: [
	arch: arm64
	;flags: ["-arch arm64"]
	flags: "-target arm64-apple-darwin"
	define: _FILE_OFFSET_BITS=64
	define: __LP64__ ; has long (integer) 64 bits
	define: __arm64__
	define: TO_OSX_X64
]


include: %blend2d/src/

b2d-lib: [
	defines: [
		;BL_BUILD_STATIC
		;BL_BUILD_OPT_SSE2
		;BL_BUILD_OPT_SSE3
		;BL_BUILD_OPT_SSSE3
		;BL_BUILD_OPT_SSE4_1
		;BL_BUILD_OPT_SSE4_2
		;BL_BUILD_OPT_AVX
		;BL_BUILD_OPT_AVX2
		;_UNICODE
		;ASMJIT_BUILD_EMBED
		;ASMJIT_BUILD_STATIC
		;BL_BUILD_TEST
	]
]


r3-extension: [
	source: %src/
	files: only [
		%blend2d-rebol-extension.c
		%blend2d-command.c
		%blend2d-command-draw.c
		%blend2d-command-path.c
		%blend2d-command-font.c
		%blend2d-command-image.c
		%blend2d-command-info.c
		;%blend2d-command-draw-test.c
	]
	include: [
		%src/
		%rebol/src/include/
	]
	defines: [ENDIAN_LITTLE]
	cflags:  [-fpermissive]
	flags:   [-O2 shared]

	#if Posix? [
		cflags: [-fPIC -pthread ]
		;libraries: [%pthread]
	]
	do %src/blend2d-rebol-extension.r3 
]

